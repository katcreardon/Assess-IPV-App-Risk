<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChoose"
        app:layout_constraintVertical_bias="0.222"
        app:rowCount="4"
        app:useDefaultMargins="true">

        <Button
            android:id="@+id/buttonAries"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_aries"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonTaurus"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_taurus"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonGemini"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_gemini"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonCancer"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_cancer"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonLeo"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_leo"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonVirgo"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_virgo"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonLibra"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_libra"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonScorpio"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_scorpio"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonSagittarius"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_sagittarius"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonCapricorn"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_capricorn"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonAquarius"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_aquarius"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonPisces"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_pisces"
            app:layout_column="2"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textViewChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/chooseText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>